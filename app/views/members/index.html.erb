<%= render partial: "/shared/search" %>

<div class = "page-header">
  <h1>
    Members
    <small><%= link_to 'New Member', new_member_path %></small>
  </h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Original website</th>
      <th scope="col">Website</th>
      <th scope="col" colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <th scope="row"><%= member.id %></th>
        <td><%= member.name %></td>
        <td><%= link_to member.original_website, member.original_website, target: "_blank" %></td>
        <td><%= member.website %></td>
        <td><%= link_to 'Set as Current', set_current_member_path(member) %></td>
        <td><%= link_to 'Show', member %></td>
      </tr>
    <% end %>
  </tbody>
</table>


